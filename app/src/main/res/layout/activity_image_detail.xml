<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".component.view.activity.ImageDetailActivity">

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <ImageView
                android:id="@+id/iv_background"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="fitXY"
        />
    </ScrollView>

    <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/x200dp"
            android:background="@drawable/gradation_bg_top"
    />



    <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/x250dp"
            android:background="@drawable/gradation_bg_bottom"
            android:layout_alignParentBottom="true"
    />

    <RelativeLayout
            android:id="@+id/rl_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/x24dp"
    >


        <ImageButton
                android:id="@+id/ib_cancel"
                android:layout_width="@dimen/x40dp"
                android:layout_height="@dimen/x40dp"
                android:background="@drawable/ic_close_black_24dp"
        />

        <ImageButton
                android:id="@+id/ib_more"
                android:layout_width="@dimen/x40dp"
                android:layout_height="@dimen/x40dp"
                android:layout_alignParentRight="true"
                android:background="@drawable/ic_more_horiz_black_24dp"
        />

        <TextView
                android:id="@+id/tv_collection"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/tv_sitename"
                android:textSize="13sp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:text="dkdkdk"
                android:alpha="0.9"
                android:paddingRight="@dimen/x8dp"
                android:paddingLeft="@dimen/x8dp"
                android:paddingBottom="@dimen/x2dp"
                android:background="@drawable/collection_round_bg"
        />

        <TextView
                android:id="@+id/tv_sitename"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/tv_doc_url"
                android:layout_marginBottom="@dimen/x12dp"
                android:textSize="25sp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:text="dkdkdk"
        />

        <TextView
                android:id="@+id/tv_doc_url"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/tv_date"
                android:layout_marginBottom="@dimen/x8dp"
                android:textSize="13sp"
                android:textColor="@color/white"
                android:text="dkdkdk"
        />

        <TextView
                android:id="@+id/tv_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:textSize="11sp"
                android:textColor="@color/white"
                android:text="dkdkdk"
                android:alpha="0.4"
        />






    </RelativeLayout>



</RelativeLayout>